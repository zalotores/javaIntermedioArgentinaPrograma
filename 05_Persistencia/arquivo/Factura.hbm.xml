<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.mycompany.hibernatepolo.Factura" table="Factura">
		<id name="num_factura" type="java.lang.Integer" column="cod_factura">
		<generator class="native"></generator>
		</id>
		
		<property name="descripcion_factura" type="java.lang.String"  column="desc_factura"></property>
	</class>
        
        
</hibernate-mapping>
